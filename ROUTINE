const navItems = [
  { id: 'dashboard' as NavItem, icon: Home, label: 'Dashboard' },
  { id: 'routine' as NavItem, icon: Sun, label: 'Routine' },
  { id: 'calendar' as NavItem, icon: Calendar, label: 'Calendar' },
  { id: 'habits' as NavItem, icon: Target, label: 'Habits' },
  { id: 'settings' as NavItem, icon: Settings, label: 'Settings' }
];

const moods = [
  { emoji: 'üòä', label: 'Great' },
  { emoji: 'üòå', label: 'Good' },
  { emoji: 'üòê', label: 'Okay' },
  { emoji: 'üòì', label: 'Stressed' }
];

const achievements = [
  { emoji: 'üëë', title: 'Consistency Queen', description: '7 day streak!' },
  { emoji: 'üî•', title: 'Early Bird', description: 'Woke up early 5 days' },
  { emoji: '‚ú®', title: 'Habit Master', description: 'All habits completed' }
];
